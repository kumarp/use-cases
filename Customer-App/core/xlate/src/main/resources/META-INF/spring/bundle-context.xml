<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:camel="http://camel.apache.org/schema/spring"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd
		http://www.springframework.org/schema/osgi http://www.springframework.org/schema/osgi/spring-osgi.xsd
		http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

	<camel:camelContext id="camelContext" xmlns="http://camel.apache.org/schema/spring" autoStartup="true">
		<camel:route autoStartup="true">
			<camel:from uri="direct:start"/>
			<camel:log message="test : start"/>
			<camel:to uri="direct:converter"/>
		</camel:route>
		
		<camel:route autoStartup="true">
			<camel:from uri="direct:converter"/>
			<camel:log message="test : converter"/>
			<camel:to uri="direct:marshal"/>
		</camel:route>
		
		<camel:route autoStartup="true">
			<camel:from uri="direct:marshal"/>
			<camel:log message="test : marshal"/>
			<camel:to uri="log:com.mycompany.order?level=DEBUG"/>
		</camel:route>
	</camel:camelContext>

</beans>

